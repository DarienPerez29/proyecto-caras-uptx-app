<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context=".HowTo">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/h_icon_sec"
        android:layout_marginStart="@dimen/horizontal_margin2"
        android:layout_marginTop="@dimen/top_margin1"
        android:contentDescription="@string/back_btn_desc"
        android:src="@drawable/ic_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/dark"
        android:adjustViewBounds="true"
        android:foregroundGravity="left"
        android:padding="@dimen/_5sdp"/>

    <ImageView
        android:id="@+id/scann_main_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/h_icon_main"
        android:contentDescription="@string/howto_main_logo"
        android:src="@drawable/ic_howto_white"
        app:layout_constraintBottom_toBottomOf="@+id/back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_btn"
        app:tint="@color/gold" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/top_margin1"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_btn">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/horizontal_margin1">

            <TextView
                android:id="@+id/info_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/title_1_linespace"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/info_title_1"
                android:textColor="@color/dark"
                android:textSize="@dimen/title_1" />

            <TextView
                android:id="@+id/info_desc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/desc_1_linespace"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/info_desc_1"
                android:textColor="@color/dark"
                android:textSize="@dimen/desc_1" />

            <ImageView
                android:id="@+id/info_img_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/section_linespace"
                android:contentDescription="@string/info_desc_img_1"
                android:src="@drawable/misc_info_test_1" />

            <TextView
                android:id="@+id/info_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/title_1_linespace"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/info_title_1"
                android:textColor="@color/dark"
                android:textSize="@dimen/title_1" />

            <TextView
                android:id="@+id/info_desc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/desc_1_linespace"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/info_desc_1"
                android:textColor="@color/dark"
                android:textSize="@dimen/desc_1" />

            <ImageView
                android:id="@+id/info_img_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/section_linespace"
                android:contentDescription="@string/info_desc_img_1"
                android:src="@drawable/misc_info_test_1" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>